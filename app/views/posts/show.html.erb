

<div id="post_show_content" class="skinny_wrapper wrapper_padding">
			<header>
				<p class="date"><%= @post.created_at.strftime('%A, %d %B')%></p>
				<h1><%= @post.title%></h1>
				<hr>
			</header>

		

		<div id="content">
			<%= markdown @post.content%>
		</div>
		<hr>

		<div id="share_box">
			<p>
				Share the <%= @post.title %>
			</p>
			<!-- Twitter -->
			<a onClick="javascript:window.open('http://twitter.com/share?text<%=   @post.title %> by Soyun Yoon - &amp;url= <%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>

			<!-- facebook -->	
			<a onClick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}])%>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-facebook"></i></a>



			<!-- google plus -->
			<a onClick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}])%>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-google-plus"></i></a>	

		</div>

		<hr>

</div>

<%=link_to "Edit", edit_post_path(@post)%>